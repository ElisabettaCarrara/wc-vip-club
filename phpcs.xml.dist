<?xml version="1.0"?>
<ruleset name="VIP Club WooCommerce Coding Standards">

	<description>
		WordPress Coding Standards tuned for WooCommerce plugins.
	</description>

	<!-- Base WordPress rules -->
	<rule ref="WordPress" />

	<!-- Allow WooCommerce-style hook names -->
	<rule ref="WordPress.NamingConventions.ValidHookName">
		<severity>0</severity>
	</rule>

	<!-- Allow plugin-specific text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="vip-club"/>
			</property>
		</properties>
	</rule>

	<!-- Allow modern PHP features -->
	<rule ref="WordPress.PHP.DevelopmentFunctions">
		<severity>0</severity>
	</rule>

	<!-- WooCommerce variable naming is fine -->
	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<severity>0</severity>
	</rule>

	<!-- Environment -->
	<config name="minimum_supported_wp_version" value="5.8"/>
	<config name="testVersion" value="8.0-8.3"/>

	<!-- Exclusions -->
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>
	<exclude-pattern>.github/*</exclude-pattern>
	<exclude-pattern>assets/*</exclude-pattern>
	<exclude-pattern>languages/*</exclude-pattern>

</ruleset>
